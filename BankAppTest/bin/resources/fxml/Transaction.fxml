<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="codes.controller.TransactionController">
    <children>
        <AnchorPane layoutY="5.0" prefHeight="400.0" prefWidth="201.0">
            <children>
                <AnchorPane layoutY="103.0" onMouseClicked="#paneHomeAction" prefHeight="65.0" prefWidth="203.0"
                            style="-fx-background-color: skyblue;">
                    <children>
                        <Text layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Home" textAlignment="CENTER"
                              wrappingWidth="203.3454474936243">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
                <AnchorPane layoutY="180.0" prefHeight="65.0" onMouseClicked="#paneOverviewAction" prefWidth="203.0"
                            style="-fx-background-color: skyblue;">
                    <children>
                        <Text layoutX="-3.0" layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Overview"
                              textAlignment="CENTER" wrappingWidth="203.3454474936243">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
                <AnchorPane layoutY="258.0" prefHeight="65.0" prefWidth="203.0"
                            style="-fx-background-color: lightgreen;">
                    <children>
                        <Text layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Transaction"
                              textAlignment="CENTER" wrappingWidth="203.3454474936243">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
                <AnchorPane layoutY="335.0" onMouseClicked="#paneDetailsAction" prefHeight="65.0" prefWidth="203.0"
                            style="-fx-background-color: skyblue;">
                    <children>
                        <Text layoutX="-3.0" layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Details"
                              textAlignment="CENTER" wrappingWidth="203.3454474936243">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <RadioButton fx:id="rdoWithdraw" layoutX="215.0" layoutY="29.0" mnemonicParsing="false"
                     onMouseClicked="#transactionTypeAction" selected="true" text="Withdraw">
            <font>
                <Font size="18.0"/>
            </font>
        </RadioButton>
        <RadioButton fx:id="rdoDeposit" layoutX="349.0" layoutY="29.0" mnemonicParsing="false"
                     onMouseClicked="#transactionTypeAction" text="Deposit">
            <font>
                <Font size="18.0"/>
            </font>
        </RadioButton>
        <RadioButton fx:id="rdoTransfer" layoutX="469.0" layoutY="29.0" mnemonicParsing="false"
                     onMouseClicked="#transactionTypeAction" text="Transfer">
            <font>
                <Font size="18.0"/>
            </font>
        </RadioButton>
        <TextField fx:id="tfAcc" layoutX="227.0" layoutY="82.0" prefHeight="65.0" prefWidth="340.0"
                   promptText="Account No.">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="tfAmount" layoutX="227.0" layoutY="164.0" prefHeight="65.0" prefWidth="340.0"
                   promptText="Amount">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Button layoutX="412.0" layoutY="323.0" mnemonicParsing="false" onAction="#btnSubmitAction" prefHeight="58.0"
                prefWidth="154.0" text="Submit">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <TextField fx:id="tfReceiverAcc" layoutX="227.0" layoutY="246.0" prefHeight="65.0" prefWidth="340.0"
                   promptText="Receiver Account No." visible="false">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
    </children>
</AnchorPane>
